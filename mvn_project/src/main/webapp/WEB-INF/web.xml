<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>views.list</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <servlet>
        <servlet-name>auth</servlet-name>
        <servlet-class>views.Authentification</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>testAff</servlet-name>
        <servlet-class>controleur.testAffichageControleur</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>testAff</servlet-name>
        <url-pattern>/testAff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditProfile</servlet-name>
        <servlet-class>controleur.EditProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProfile</servlet-name>
        <url-pattern>/editProfile</url-pattern>
    </servlet-mapping>
    <resource-ref>
	  <description>Connection Pool</description>
	  <res-ref-name>jdbc/jeanr</res-ref-name>
	  <res-type>javax.sql.DataSource</res-type>
	  <res-auth>Container</res-auth>
	</resource-ref>
</web-app>
